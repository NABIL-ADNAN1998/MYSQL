-- FORMATTING DATE

select names, birthday from people;

select names, day(birthday) from people;

select names, dayname(birthday) from people;

select names, dayofweek(birthday) from people;

select names, dayofyear(birthday) from people;

select names, day(birthdt) from people;

-- we can use here birthdt also
select names, month(birthday) from people;

select names, monthname(birthdt) from people;

select names, hour(birthdt) from people;

select names, minute(birthdt) from people;

select names, concat(monthname(birthdt),' ', day(birthdt),' ', year(birthdt)) as Birthday from people;
