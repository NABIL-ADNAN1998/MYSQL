use customers_orders


-- cross join
-- dui table er shob row ektar sathe arekta . evabe shob
select * from customers, orders;

-- george er shob order dekhte chai

select * from orders where customer_id = 
(
    select id from customers where last_name = 'george'
);


-- implicit inner joint (order korse oishob customer der details chai)
select * 
from 
    customers, orders 
where 
    customers.id = orders.customer_id;

select 
    first_name, last_name, order_date, amount 
from 
    customers, orders 
where 
    orders.customer_id = customers.id;

-- explicit inner joint(because I use join here)(jara order korse tader details)

select 
    email, order_date, amount 
from 
    customers 
join 
    orders 
on 
    customers.id = orders.customer_id;


-- make it complex

select 
    email, order_date, amount 
from 
    customers, orders 
where 
    orders.customer_id = customers.id 
order by 
    amount;

-- amount dile sum() korte hobe and order_date er jonno max() use kora lagbe . Cause ekhane grouping hocche 
-- column er age table er nam likha ta good practice
select c
    ustomers.first_name, customers.last_name, customers.email, sum(orders.amount) as total_spent, max(orders.order_date)
from 
    customers 
join 
    orders
on 
    customers.id = orders.customer_id 
group by 
    orders.customer_id
order by 
    total_spent;

-- ek e kaj where diyeo kora jay. jehetu join use kortesi na tai eta implicit inner join. Implicit er theke explicit better
select 
    customers.first_name, customers.last_name, customers.email, sum(orders.amount) as total_spent, max(orders.order_date)
from 
    customers, orders
where 
    customers.id = orders.customer_id 
group by 
    orders.customer_id
order by 
    total_spent desc;




-- left join. we get all from left table

select 
    first_name, last_name, order_date, amount 
from 
    customers 
left join 
    orders 
on 
    orders.customer_id = customers.id;




-- left join and group by. max() ar sum() ue na korle group korte parbe na

select 
    first_name, last_name, max(order_date), sum(amount)
from 
    customers 
left join 
    orders 
on 
    orders.customer_id = customers.id
group by
    customers.id;




-- we can replace null by 0

select 
    first_name, last_name, max(order_date), ifnull(sum(amount), 0) as total
from 
    customers 
left join 
    orders 
on 
    orders.customer_id = customers.id
group by
    customers.id
order by
    total desc;



-- right join. Get all row from right table

select 
    first_name, last_name, max(order_date), ifnull(sum(amount), 0) as total
from 
    customers 
right join 
    orders 
on 
    orders.customer_id = customers.id;
